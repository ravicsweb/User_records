
<h1>Users Records</h1><br/>
<% if session[:user_id] %>
<table border="1" cellpadding="5">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone No</th>
    <th>Gender</th>
    <th>Date of Birth</th>
    <th>Hobbies</th>
    <th>City</th>
    <th>Address</th>
    <th>Image</th>
    <th colspan="3">Action</th>
  </tr>
  <% if @records.size >0 %>
    <% for rd in @records %>
      <tr>
        <td><%=rd.id%></td>
        <td><%=rd.fname%>&nbsp;<%=rd.lname%></td>
        <td><%=rd.email%></td>
        <td><%=rd.cell_no%></td>
        <td><%=rd.gender%></td>
        <td><%=rd.bdate%></td>
        <td><%=rd.hobbies%></td>
        <td><%=rd.city%></td>
        <td><%=rd.address%></td>
        <td><%= image_tag rd.avatar.url(),:width => 50, :height => 50 %></td>
        <td><%= link_to image_tag("show.png", :alt => "show image", :width => 20, :height => 20, :title => "Click here to show this record"), rd %>
            <%#<%= link_to "Show", rd %>
        </td>
        <td>
          <%= link_to image_tag("update.png", :alt => "update image", :width => 20, :height => 20, :title => "Click here to update this record"), edit_record_path(rd) %>
          <%#<%= link_to "Update", edit_record_path(rd)%>
        </td>
        <td>
          <%= link_to image_tag("delete.png", :alt => "delete image", :width => 20, :height => 20, :title => "Click here to delete this record"),rd , :confirm => 'Are you sure?', :method => :delete%>
          <%#<%= link_to "Destroy", rd , :confirm => 'Are you sure?', :method => :delete %>
        </td>
       </tr>
      <% end %>
   <% else %>
       <tr>
         <td colspan="10">No Record Found</td>
       </tr>
   <% end %>
</table>

<% else %>
<p>
  Please Sign in......!
</p> 
<% end %>
